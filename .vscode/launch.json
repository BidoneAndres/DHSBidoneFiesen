    "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ANTLR4 grammar",
      "type": "antlr-debug",
      "request": "launch",
      // Archivo con la gramatica
      "grammar": "${file}",
      // Archivo a parsear
      "input": "/home/eduardo/DHS/DHSBidoneFiesen/DHS/input/opal.txt",
      // Simbolo inicial
      "startRule": "programa",
      // Muestra Arbol Sintactico
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
  },
    {
      "type": "java",
      "name": "Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "java",
      "name": "App",
      "request": "launch",
      "mainClass": "dhs.App",
      "projectName": "dhs"
    }
  ]
